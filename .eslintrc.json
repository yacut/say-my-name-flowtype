{
    "env": {
        "browser": true,
        "node": true,
        "mocha": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
        "babel",
        "react",
        "flowtype",
        "jsx-a11y",
        "import"
    ],
    "rules":{
      "max-len": ["error", 120],
      "spaced-comment": ["error", "never"]
    }
}
